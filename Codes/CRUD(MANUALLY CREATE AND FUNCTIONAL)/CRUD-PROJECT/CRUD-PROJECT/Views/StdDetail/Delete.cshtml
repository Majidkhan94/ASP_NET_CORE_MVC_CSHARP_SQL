@model CRUD_PROJECT.Model.StdDetail

<div class="deletecontainer">
    <h3 class="heading" style="text-align:center;">Are you sure you want to delete this?</h3>
    

    <table class="delete-table">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td>@Html.DisplayFor(model => model.Address)</td>
                <td>@Html.DisplayFor(model => model.Phone)</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primaryy">Back to List</a>
    </form>
</div>
