@model VibePhone.Models.Category

@{
    Layout = "~/Views/Shared/Admin.cshtml";
    ViewData["Title"] = "Add Category";
}


<div class="maincontainer">
    <div class="container-card">
        <h4>Add Category</h4>
        <hr>


        <form asp-action="CategoryAdd" method="post" enctype="multipart/form-data">
            <div class="form-row">

                <!-- Title -->
                <div class="form-group">
                    <input asp-for="CategoryName" type="text" class="feature-field" placeholder="Enter CategoryName">
                </div>

                <!-- Submit -->
                <div class="form-group full">
                    <div class="form-actions">
                        <input type="submit" value="Create" class="btn btn-primary">
                        <a href="@($"{Url.Action("Index", "Dashboard")}#Categories")" class="btn btn-secondary">Back to Dashboard</a>

                    </div>
                </div>

            </div>
        </form>
    </div>
</div>