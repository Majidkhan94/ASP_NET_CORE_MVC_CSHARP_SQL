@model VibePhone.Models.Contactus

@{
    Layout = "~/Views/Shared/Admin.cshtml";
    ViewData["Title"] = "Delete Contact";
}

<div class="maincontainer">
    <div class="container-card">
        <h4>Are you sure you want to delete this contact?</h4>
        <hr>

        <div class="form-row">

            <div class="form-group">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Message:</strong> @Model.Message</p>
            </div>

            <div class="form-group full">
                <form asp-action="DeleteContactConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-actions">
                        <input type="submit" value="Delete" class="delete-btn" />
                        <a href="@($"{Url.Action("Index", "Dashboard")}#Contactus")" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>
