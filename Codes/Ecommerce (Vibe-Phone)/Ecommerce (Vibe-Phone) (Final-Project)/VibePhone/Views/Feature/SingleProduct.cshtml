@model VibePhone.ViewModel.ViewFeature
@{
    ViewData["Title"] = Model.Title ?? "Product Details";
}







<section class="single-product">
    <div class="product-wrapper">
        <!-- Left: Product Images -->
        <div class="product-images">
            <div class="main-image">
                <img src="@Url.Content("~/UploadImages/" + (ViewData["ImagePath"] ?? "default.png"))" alt="@Model.Title" />

            </div>
           
        </div>

        <!-- Right: Product Info -->
        <div class="product-info">
            <h2>@Model.Title</h2>
            <p class="category">Category: @Model.Category?.CategoryName</p>
            <p class="price">$@Model.Price</p>
            <p class="description">@Model.Description</p>

        

           
            <!-- Buttons -->
            <div class="actions">
                <a href="@Url.Action("Index", "Checkout", new { productName = Model.Title, price = Model.Price })" class="btn btn-primary">
                    Buy Now
                </a>
                @* <a href="@Url.Action("HomePage", "Front")" class="btn btn-secondary">Back to HomePage</a> *@

            </div>


           
        </div>
    </div>
</section>
