@model VibePhone.ViewModel.ViewGallery

@{
    Layout = "~/Views/Shared/Admin.cshtml";
    ViewData["Title"] = "Add Gallery";
}


<div class="maincontainer">
    <div class="container-card">
        <h4>Add Gallery</h4>
        <hr>


        <form asp-action="GalleryAdd" method="post" enctype="multipart/form-data">
            <div class="form-row">

                <!-- Product Name -->
                <div class="form-group">
                    <label for="ProductName">Product Name</label>
                    <input asp-for="ProductName" type="text" class="feature-field" placeholder="Enter Product Name" required />
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea asp-for="Description" class="feature-field" placeholder="Enter Product Description" required></textarea>
                </div>

                <!-- Price -->
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input asp-for="Price" type="number" step="0.01" class="feature-field" placeholder="Enter Product Price" required />
                </div>

                <!-- Category Dropdown -->
                <div class="form-group">
                    <label for="CategoryId">Select Category</label>
                    <select asp-for="CategoryId" class="feature-field" required>
                        <option value="" disabled>-- Select Category --</option>
                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.CategoryId">@cat.CategoryName</option>
                        }
                    </select>
                </div>

                <!-- Image -->
                <div class="form-group">
                    <label for="ImageGallery">Upload Image</label>
                    <input asp-for="ImageGallery" type="file" class="feature-field" required />
                </div>

                <!-- Submit -->
                <div class="form-group full">
                    <div class="form-actions">
                        <input type="submit" value="Create" class="btn btn-primary">
                        <a href="@($"{Url.Action("Index", "Dashboard")}#Gallery")" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>