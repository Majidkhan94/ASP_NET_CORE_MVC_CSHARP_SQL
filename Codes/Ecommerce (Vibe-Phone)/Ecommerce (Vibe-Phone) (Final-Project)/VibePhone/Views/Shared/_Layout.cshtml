<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Customcss/StyleSheet.css" />
    <link rel="icon" href="~/Images/logo.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <title>@ViewBag.Title</title>
</head>
<body>

    @* Header Start *@

    <section class="HeadContainer">
        <a asp-controller="Front" asp-action="HomePage"><img src="~/Images/logo.png" class="logo"></a>
            
        <nav class="navigations">
            <ul>
                <li><a asp-controller="Front" asp-action="HomePage">HOME</a></li>
                <li><a asp-controller="Front" asp-action="AboutUs">ABOUT US</a></li>
                <li class="dropdown">
                    <a asp-controller="Front" asp-action="Products">PRODUCTS</a>
                    <ul class="dropdown-menu">
                        <li><a asp-controller="Front" asp-action="Sony">SONY</a></li>
                        <li><a asp-controller="Front" asp-action="Apple">APPLE</a></li>
                        <li><a asp-controller="Front" asp-action="Bose">BOSE</a></li>
                        <li><a asp-controller="Front" asp-action="Sennheiser">SENNHEISER</a></li>
                    </ul>
                </li>
                @* <li><a asp-controller="Front" asp-action="Reviews">REVIEWS</a></li> *@
                <li><a asp-controller="Front" asp-action="Blog">BLOG</a></li>
                <li><a asp-controller="Front" asp-action="ContactUs">CONTACT US</a></li>
            </ul>
        </nav>

        <div class="order button">
            <!-- Search Input + Button -->
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Search...">
            </div>

            <!-- Cart Icon -->
            @* <a asp-controller="Front" asp-action="Shopping"><i class="fa-solid fa-cart-shopping"></i></a> *@
            
            <!-- 👤 Login / Logout -->
            @if (Context.Session.GetString("UserName") != null)
            {
                <!-- Logout Button -->
                <a asp-controller="Registration" asp-action="Logout" class="login">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                </a>
            }
            else
            {
                <!-- Login Button -->
                <a asp-controller="Registration" asp-action="Login" class="login">
                    <i class="fa-solid fa-right-to-bracket"></i> Login
                </a>
            }




        </div>

    </section>

    @* Header End *@

    <div>
        @RenderBody()
    </div>


    @* Footer Start *@
    <section class="footer">
    <section class="FooterContainer">
        <div class="widget detail1">
            <a asp-controller="Front" asp-action="HomePage"> <img src="~/Images/logo.png"></a>
            <p>Premium quality headphones designed for ultimate sound experience. Our goal is to deliver comfort and immersive audio.</p>
            <div class="Sociallinks">
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-x-twitter"></i></a>
            </div>
        </div>
        <div class="widget">
            <h2 class="heading">QUICK LINKS</h2>
            <nav class="navigations">
                <a asp-controller="Front" asp-action="HomePage">HOME</a>
                <a asp-controller="Front" asp-action="AboutUs">ABOUT US</a>
                <a asp-controller="Front" asp-action="Products">PRODUCTS</a>
                <a asp-controller="Front" asp-action="Blog">BLOG</a>
            </nav>
        </div>
        <div class="widget">
            <h2 class="heading">HELP AND INFO</h2>
            <nav class="navigations">
                <a asp-controller="Front" asp-action="Faqs">FAQS</a>
                <a asp-controller="Front" asp-action="TermAndCondition">TERM AND CONDITIONS</a>
                <a asp-controller="Front" asp-action="PrivacyPolicy">PRIVACY POLICY</a>
                @* <a asp-controller="Front" asp-action="Reviews">REVIEWS</a> *@
            </nav>
        </div>
        <div class="widget">
            <h2 class="heading">Contact Us</h2>
            <div class="details">
                <div class="item">
                    <i class="fas fa-phone-alt"></i>
                    &nbsp;<span>+92 300 1234567</span>
                </div>
                <div class="item">
                    <i class="fas fa-envelope"></i>
                    &nbsp;<span>VibePhone@gmail.com</span>
                </div>
                <div class="item">
                    <i class="fas fa-map-marker-alt"></i>
                    &nbsp;<span>RWP, Pakistan</span>
                </div>
            </div>
        </div>
    </section>

    <section class="copyright">
        <p>Copyright© 2025 - All rights reserved - Created By Majid Khan</p>
    </section>
    

</section>
    @* Footer End *@



  <script src="~/Customjs/JavaScript.js"></script>
</body>
</html>
