@model VibePhone.Models.Testimonial

@{
    Layout = "~/Views/Shared/Admin.cshtml";
    ViewData["Title"] = "Delete Testimonial";
}

<div class="Dcontainer">
    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <div class="mb-3">
        <strong>@Html.DisplayNameFor(model => model.Title):</strong>
        <span>@Html.DisplayFor(model => model.Description)</span>
    </div>

    <form asp-action="TestimonialDeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <input type="submit" value="Delete" class="delete-btn" />
            <a href="@($"{Url.Action("Index", "Dashboard")}#Testimonials")" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </form>
</div>
