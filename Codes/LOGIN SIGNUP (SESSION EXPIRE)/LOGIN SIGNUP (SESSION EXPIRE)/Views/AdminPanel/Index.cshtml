

<!-- login page -->

<div class="login-wrapper">
    <!-- LEFT: LOGIN FORM -->

    <div class="login-left">
        <h2>Welcome Back</h2>
        <p>Please login to your BlogNest account</p>
        <span asp-validation-summary="All" class="text-danger"></span>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email"><i class="fas fa-user"></i>Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"><i class="fas fa-lock"></i> Password</label>
                <input asp-for="Password" type="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>



            <p style="margin-top: 15px;">
                Don't have an account?
                <a href="javascript:void(0);" class="Registeration-link">Register here</a>
            </p>
        </form>
        @if (ViewBag.error != null)
        {
            <div class="text-danger" style="margin-bottom: 10px;">
                @ViewBag.error
            </div>
        }
    </div>

    <!-- RIGHT: INFO -->
    <div class="login-right">
        <h2>About BlogNest</h2>
        <p><strong>BlogNest</strong> is your personal blogging space. Share your thoughts, ideas, and stories with the world. </p>
        <ul>
            <li>📚 Simple and intuitive design</li>
            <li>📝 Write and manage your posts easily</li>
            <li>🔒 Secure login & admin panel</li>
        </ul>
        <p>Login to access your dashboard and start blogging!</p>
    </div>
</div>


<!-- Registration page -->



<div class="register-wrapper hidden">
    <!-- LEFT: INFO SECTION -->
    <div class="register-left">
        <h2>Welcome to BlogNest</h2>
        <p><strong>BlogNest</strong> lets you share your stories with the world.</p>
        <ul>
            <li>📝 Create your own blog</li>
            <li>🔐 Secure member area</li>
            <li>⚙️ Easy to manage dashboard</li>
        </ul>
        <p>Register now and start your blogging journey!</p>
    </div>

    <!-- RIGHT: REGISTRATION FORM -->
    <div class="register-right">
        <h2>Create Account</h2>
        <span asp-validation-summary="All" class="text-danger"></span>

        <form asp-action="Registration" method="post">

            <div class="form-group">
                <label asp-for="FirstName"><i class="fas fa-user"></i>First Name</label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"><i class="fas fa-user-tag"></i>Last Name</label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"><i class="fas fa-envelope"></i>Email</label>
                <input asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"><i class="fas fa-lock"></i> Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"><i class="fas fa-lock"></i> ConfirmPassword</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-user-plus"></i> Register
            </button>



            <p style="margin-top: 15px; text-align: center;">
                Already have an account?
                <a href="javascript:void(0);" class="login-link">Login here</a>
            </p>
        </form>
    </div>



