@model List<StdDetailsModel>

@{
    Layout = "~/Layout/_Layout.cshtml";
}

<div class="all-students-container">
    <h2>📋 All Registered Students</h2>

    <table class="table-styled">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.ID</td>
                    <td>@student.Name</td>
                    <td>@student.Address</td>
                    <td>@student.Phone</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/StdDetails/ShowStdDetails" class="btn btn-primary">➕ Add New Student</a>
</div>
