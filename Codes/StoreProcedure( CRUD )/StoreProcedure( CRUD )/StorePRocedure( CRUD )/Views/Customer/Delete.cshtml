@model StorePRocedure__CRUD__.Model.CustModel

@{
    ViewData["Title"] = "Delete";
}

<div class="deletecontainer">
    <h1>Delete Customer</h1>
    <p class="warning-text">Are you sure you want to delete this customer?</p>

    <div class="delete-card">
        <p><span>Name:</span> @Model.Name</p>
        <p><span>Address:</span> @Model.Address</p>
        <p><span>Phone:</span> @Model.Phone</p>
        <p><span>Gender:</span> @Model.Gender</p>
    </div>

    <form asp-action="Delete" method="post" class="delete-actions">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
